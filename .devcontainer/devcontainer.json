// For format details, see https://aka.ms/devcontainer.json. For config options, see the
{
	"name": "Dev Environment",

	"build": {
		"dockerfile": "Dockerfile"
	},

	"runArgs": [
		"--name", "devenv"
	],

	"features": {
		// https://github.com/devcontainers/templates/tree/main/src/kubernetes-helm-minikube
		"ghcr.io/devcontainers/features/kubectl-helm-minikube:1": {
			"version": "v1.35.0",
			"helm": "v4.1.0",
			"minikube": "v1.38.0"
		},
		// https://github.com/devcontainers/features/tree/main/src/docker-in-docker
		"ghcr.io/devcontainers/features/docker-in-docker:2": {},
		// https://github.com/devcontainers/features/tree/main/src/terraform
		"ghcr.io/devcontainers/features/terraform:1": {}
	},
	
	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	// "forwardPorts": [],

	// Use 'postCreateCommand' to run commands after the container is created.
	"postCreateCommand": "post-create",

	// Use 'postStartCommand' to run commands after the container is created like starting minikube.
	"postStartCommand": "post-start",

	// Configure tool-specific properties.
	"customizations": {
		"vscode": {
			"extensions": [
				"hashicorp.terraform",
				"redhat.vscode-yaml",
				"streetsidesoftware.code-spell-checker",
				"ms-azuretools.vscode-docker",
				"asciidoctor.asciidoctor-vscode"
			]
		},
		"settings": {
			"editor.tabSize": 2,
			
			// Terraform settings
			"[terraform]": {
				"editor.defaultFormatter": "hashicorp.terraform",
				"editor.formatOnSave": true,
				"editor.tabSize": 2
			}
		}
	},

	// Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root. By default vscode.
	"remoteUser": "vscode"
}
